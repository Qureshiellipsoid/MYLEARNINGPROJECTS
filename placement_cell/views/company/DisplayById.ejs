<!DOCTYPE>
<html>
    <head>
        <title>Register</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/stylesheets/bootstrap.css">
        <script src="/javascripts/bootstrap.js"></script>
        <script src="/javascripts/jquery.js"></script>
        <script src="/javascripts/company/state_city.js"></script>
    </head>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <!-- Brand/logo -->
        <a class="navbar-brand" href="#">
          <img src="/images/company/<%= company.logo %>" alt="logo" style="width:40px;">
        </a>
        
        <!-- Links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" href="/company/displaybyid/<%= company._id %>">Profile </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Link 2</a>
          </li>
          <li class="nav-item" style="align-content:left">
            <a class="nav-link" href="#">Link 3</a>
          </li>
        </ul>
        <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
            <li class="nav-item" style="align-content:left">
                <a class="nav-link" style="color:white" href="/company/logout">
                    <button type="button" class="btn btn-light ">Logout</button>
                </a>
            </li>
        </ul>
      </nav>
      
    <div class="container">
        <div  style="align-content: center">
           <h1 style="text-align:center">Update Profile</h1>
        </div>
        <br>
        <div class="row">
            <div class="col">
            <form action = "/company/updatebyid/<%= company._id %>" method = "post" >
                <div class="form-group">
                    <label for="exampleInputEmail1">Company Name</label>
                    <input type="text" class="form-control" id="name" name = "name"  placeholder="Enter Company Name" value="<%= company.name %>">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">H-R Name</label>
                    <input type="text" class="form-control" id="hr" name = "hr"  placeholder="Enter H-R Name" value="<%= company.hr %>">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="email" class="form-control" name = "email_id" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" value="<%= company.email_id %>">
                  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Mobile No </label>
                    <input type="number" class="form-control" id="mobile" name = "mobile_no" aria-describedby="emailHelp" placeholder="Enter mobile no" value="<%= company.mobile_no %>">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Website </label>
                    <input type="url" class="form-control" id="website" name = "website" aria-describedby="emailHelp" placeholder="Enter website" value="<%= company.website %>">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect2">State</label>
                    <select  class="form-control" id="state" name = "state_id">
                        <option selected disabled>Select State</option>
                    </select>
                </div>
                <div class="form-group">
                        <label for="exampleFormControlSelect2">City</label>
                        <select  class="form-control" id="city" name = "city_id">
                            <option selected disabled>Select City</option>
                        </select>
                    </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Address</label>
                    <textarea class="form-control" name = "local_address" id="exampleFormControlTextarea1" rows="3"><%= company.local_address %></textarea>
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" class="form-control" name = "password" id="Password" placeholder="Password" value="<%= company.password%>">
                </div>
                <button type="submit" class="btn btn-primary">Update Profile</button>
            </form>
            </div>
        <div class="col">
            <form action="/company/updatelogobyid/<%= company._id %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <img src="/images/company/<%= company.logo%>" class="img-fluid" alt="Responsive image">
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" name = "logo" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Update Logo</button>
            </form>
        </div>
    </div>
</html>
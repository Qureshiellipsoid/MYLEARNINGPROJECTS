<!DOCTYPE>
<html>
    <head>
        <title>Update</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/stylesheets/bootstrap.css">
        <script src="/javascripts/bootstrap.js"></script>
        <script src="/javascripts/jquery.js"></script>
        <script src="/javascripts/student/branch.js"></script>
    </head>
    <div class="container">
        <div  style="align-content: center">
           <h1 style="text-align:center">UPDATE PROFILE</h1>
        </div>
        <br/>

        <div class="row">
            <div class="col">
                <form action = "/student/updatebyid/<%= student._id %>" method = "post" >
                    <div class="form-group">
                        <label for="exampleInputEmail1">Student Name</label>
                        <input type="text" class="form-control" id="name" name = "name" aria-describedby="emailHelp" placeholder="Enter email" value="<%=student.name%>">
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlSelect2">Branch Name</label>
                        <select  class="form-control" id="branch_name" name = "branch_code">
                            <option selected disabled>Select Branch Name</option>
                        </select>
                    </div>

                    <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" name = "email_id" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" value="<%=student.email_id%>">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Mobile No </label>
                        <input type="number" class="form-control" id="mobile_no" name = "mobile_no" aria-describedby="emailHelp" placeholder="Enter mobile no" value="<%=student.mobile_no%>">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Enrollment No.</label>
                        <input type="text" class="form-control" id="erp_no" name = "erp_no" aria-describedby="emailHelp" placeholder="Enter enrollment no." value="<%=student.erp_no%>">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">10th percentage</label>
                        <input type="number" class="form-control" id="class_10_per" name = "class_10_per" aria-describedby="emailHelp" placeholder="Enter 10th percentage" value="<%=student.class_10_per%>">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">12th percentage </label>
                        <input type="number" class="form-control" id="class_12_per" name = "class_12_per" aria-describedby="emailHelp" placeholder="Enter 12th percentage" value="<%=student.class_12_per%>">
                    </div>
                    
                    <div class="form-group">
                        <label for="exampleInputEmail1">SGPA </label>
                        <input type="number" class="form-control" id="sgpa" name = "sgpa" aria-describedby="emailHelp" placeholder="Enter SGPA" value="<%=student.sgpa%>">
                    </div>

                    <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name = "password" id="exampleInputPassword1" placeholder="Password" value="<%=student.password%>">
                    </div>
                    <button type="submit" class="btn btn-primary">Update Profile</button>
                </form>
            </div>

            <div class="col">
                <form action="/student/updatepicbyid/<%= student._id %>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <img src="/images/student/<%= student.pic%>" class="img-fluid" alt="Responsive image">
                </div>
                <div class="form-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name = "pic" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01">Choose Photo</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Update Photo</button>
                </form>
            </div>
        </div>
    </div>
</html>